{
  "name": "jobsboard",
  "version": "1.0.0",
  "description": "Serverless Typescript Boilerplate",
  "scripts": {
    "format": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,jsx,ts,tsx,json,yml,yaml,md}\" --write",
    "package": "serverless package",
    "deploy": "export NODE_OPTIONS=--max_old_space_size=8192 && serverless deploy --stage dev",
    "deploy:stage": "serverless deploy --stage stage",
    "deploy:prod": "serverless deploy --stage prod --aws-profile jobsboard",
    "deploy:hello": "serverless deploy function -f hello --stage dev",
    "deploy:graphql": "serverless deploy function -f graphql --stage dev",
    "destroy": "serverless remove --stage dev",
    "destroy:stage": "serverless remove --stage stage",
    "destroy:prod": "serverless remove --stage prod --aws-profile jobsboard",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "local": "serverless dynamodb install; serverless offline start --stage local",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --colors --coverage",
    "test:integration": "jest -c jest.config.integration.js",
    "tail:hello:dev": "serverless logs --function hello --tail --stage dev",
    "watch:hello": "serverless invoke local --watch --function hello --path fixtures/event.json",
    "watch:board-status": "IS_OFFLINE=true serverless invoke local --watch --function board-status --path fixtures/event.json",
    "watch:board-list": "IS_OFFLINE=true serverless invoke local --watch --function board-list --path fixtures/board-list.json",
    "watch:file-upload": "IS_OFFLINE=true serverless invoke local --watch --function file-upload --log --data='{ \"image_url\": \"https: //assets-cdn.github.com/images/modules/open_graph/github-mark.png\", \"key\": \"github.png\"}'"
  },
  "engines": {
    "node": ">=v12.14.0 <13"
  },
  "keywords": [
    "API",
    "Typescript",
    "Serverless",
    "Lambda",
    "AWS",
    "Jest",
    "Babel",
    "Webpack",
    "GraphQL",
    "Boilterplate"
  ],
  "author": "David Calcus",
  "license": "MIT",
  "dependencies": {
    "apollo-server-lambda": "2.13.1",
    "auth0-js": "9.13.2",
    "axios": "0.19.2",
    "dynamodb-geo": "0.4.0",
    "graphql": "15.0.0",
    "graphql-iso-date": "3.6.1",
    "graphql-type-json": "0.3.1",
    "graphql-upload": "10.0.0",
    "jsonwebtoken": "8.5.1",
    "nanoid": "3.1.7",
    "nexus": "0.21.0",
    "winston": "3.2.1",
    "yup": "0.28.5"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/preset-env": "7.9.6",
    "@babel/preset-typescript": "7.9.0",
    "@haftahave/serverless-ses-template": "1.3.2",
    "@types/aws-lambda": "8.10.51",
    "@types/jest": "25.2.2",
    "@types/node": "14.0.1",
    "@typescript-eslint/eslint-plugin": "2.33.0",
    "@typescript-eslint/parser": "2.33.0",
    "aws-lambda": "1.0.6",
    "aws-sdk": "2.678.0",
    "aws-xray-sdk": "2.5.0",
    "babel-loader": "8.1.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.0",
    "eslint-plugin-prettier": "3.1.3",
    "friendly-errors-webpack-plugin": "1.7.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "serverless": "1.71.1",
    "serverless-apigw-binary": "0.4.4",
    "serverless-dynamodb-local": "1.0.2",
    "serverless-iam-roles-per-function": "2.0.2",
    "serverless-offline": "6.1.5",
    "serverless-prune-plugin": "1.4.3",
    "serverless-webpack": "5.3.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.4",
    "typescript": "3.9.2",
    "webpack": "4.43.0",
    "webpack-node-externals": "1.7.2",
    "yamljs": "0.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src|test)/**/*.{js,jsx,ts,tsx}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  }
}
